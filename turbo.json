{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^test", "build"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "cache": true
    },
    "contracts:start-node": {
      "persistent": true,
      "cache": false
    },
    "contracts:deploy-local": {
      "dependsOn": ["contracts:start-node"],
      "cache": false
    },
    "app:dev": {
      "persistent": true,
      "cache": false
    },
    "test:e2e": {
      "dependsOn": ["contracts:deploy-local"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "cache": false
    }
  }
}
